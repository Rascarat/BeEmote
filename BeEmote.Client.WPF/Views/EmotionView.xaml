<UserControl x:Class="BeEmote.Client.WPF.EmotionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeEmote.Client.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="750">

    <Grid Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header title -->
        <TextBox x:Name="EmotionTitle" Grid.Row="0"
                 Text="Analyse des visages d'une photo"
                 FontFamily="Lucida Handwriting"
                 FontStyle="Italic"
                 FontSize="24"
                 Background="Transparent"
                 Foreground="White"
                 BorderThickness="0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Margin="15,0,0,0"/>

        <!-- View Main Content -->
        <Grid Grid.Row="1">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left part of the screen -->
            <Border Grid.Column="0"
                    Padding="10,10,5,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Image Buttons -->
                    <Grid x:Name="ImageButtons" Grid.Row="0">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="BrowseImageButton" Grid.Column="0"
                                Content="Browse..."
                                FontFamily="Calibri"
                                FontSize="14"
                                Foreground="#70CCFB"
                                Background="White"
                                BorderThickness="0"
                                Margin="2" />
                        <Button x:Name="PreviousFaceButton" Grid.Column="1"
                                Content="Previous Face"
                                FontFamily="Calibri"
                                FontSize="14"
                                Foreground="#70CCFB"
                                Background="White"
                                BorderThickness="0"
                                Margin="2" />
                        <Button x:Name="NextFaceButton" Grid.Column="2"
                                Content="Next Face"
                                FontFamily="Calibri"
                                FontSize="14"
                                Foreground="#70CCFB"
                                Background="White"
                                BorderThickness="0"
                                Margin="2" />
                    </Grid>

                    <!-- Image -->
                    <Border  Grid.Row="1"
                             Margin="2"
                             BorderThickness="2"
                             BorderBrush="White">
                        <Canvas x:Name="ImageContainer">
                            <Image x:Name="EmotionImage" />
                            <Rectangle Canvas.Left="{Binding}"
                                   Canvas.Top="{Binding}"
                                   Width="{Binding}"
                                   Height="{Binding}"
                                   Stroke="#FFD13D3D"/>
                            <!-- XXX Insert face rectangles here -->
                        </Canvas>
                    </Border>
                </Grid>
            </Border>

            <!-- Right part of the screen -->
            <Border Grid.Column="1"
                    Padding="5,10,10,10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Statistiques -->
                    <Border Grid.Row="0"
                            Margin="2"
                            BorderThickness="2"
                            BorderBrush="White">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Statistiques"
                                       FontFamily="Lucida Handwriting"
                                       FontStyle="Italic"
                                       FontSize="18"
                                       Foreground="White"
                                       Margin="10"
                                       VerticalAlignment="Top"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Calls per day:"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                                    <Label Content="20"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Faces per call:"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                                    <Label Content="2"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Dominant Emotion:"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                                    <Label Content="Anger"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                    </Border>
                    
                    <!-- Image Specific Data -->
                    <Border Grid.Row="1"
                            Margin="2"
                            BorderThickness="2"
                            BorderBrush="White">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Image Analyse result"
                                       FontFamily="Lucida Handwriting"
                                       FontStyle="Italic"
                                       FontSize="18"
                                       Foreground="White"
                                       Margin="10"
                                       VerticalAlignment="Top"/>

                            <!-- Number of faces -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Label Content="3"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                                <Label Content="faces found!"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="White"/>
                            </StackPanel>

                            <!-- Emotion table -->
                                <Grid Margin="15,5,15,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Anger:"
                                           FontFamily="Calibri"
                                           FontSize="14"
                                           Foreground="#70CCFB"/>
                                    <Label Content="3"
                                           FontFamily="Calibri"
                                           FontSize="14"
                                           Foreground="#70CCFB"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Contempt:"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                    <Label Content="3"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Disgust:"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                    <Label Content="3"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Fear:"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                    <Label Content="3"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Happiness:"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                    <Label Content="3"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Neutral:"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                    <Label Content="3"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Sadness:"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                    <Label Content="3"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1"
                                            Background="White"
                                            Margin="1">
                                    <Label Content="Surprise:"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                    <Label Content="3"
                                            FontFamily="Calibri"
                                            FontSize="14"
                                            Foreground="#70CCFB"/>
                                </StackPanel>

                            </Grid>
                        </StackPanel>
                    </Border>

                </Grid>
                
            </Border>

        </Grid>
    </Grid>
</UserControl>
